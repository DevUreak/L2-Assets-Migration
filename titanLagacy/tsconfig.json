{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "": ["./*"],
      "~/*": ["./*"],
      "ethers2": ["./node_modules/ethers2"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./test", "./src", "./scripts", "./hardhat.config.ts"],
}
